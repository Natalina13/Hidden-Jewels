<% include ../partials/header %>

<div class="row">
	<h1 style="text-align: center">
	 Edit <%= travelsite.name%>
</h1>
	<div style="width: 30%; margin: 30px auto">
		<form action="/travel/<%= travelsite._id%>/?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="travelsite[name]" value="<%= travelsite.name%>">
			</div>
			<div class="form-group">
				<input class="form-control"  type="text" name="travelsite[image]"  value="<%= travelsite.image%>">
			</div>
			<div class="form-group">
				<input class="form-control"  type="text" name="travelsite[description]"  value="<%= travelsite.description%>">
			</div>
			<div class="form-group">
				<input class="form-control"  type="text" name="travelsite[location]"  value="<%= travelsite.location %>">
			</div>
			<div class="form-group">
				<input class="form-control"  type="number" name="travelsite[price]" value="<%= travelsite.price %>" min="0.01" step="0.01">
			</div>
			
			<div class="form-group">
				<input class="btn btn-primary btn-lg btn-block"  type="submit">
			</div>
		
</form>
		<a href="/travel">See all sites</a>
	</div>
	</div>




<% include ../partials/footer %>